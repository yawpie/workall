<html lang="en">
  <head>
    <%- include ('./component/meta/head.ejs') %>
  </head>
  <body>
    <%- include ('./component/header.ejs') %>
    <div class="h-[580px] flex justify-center items-center">
      <div class="flex justify-center items-center h-[100%] flex-col">
        <p
          class="text-w-green font-inter font-semibold text-[45px] text-center"
        >
          Cari
          <span class="font-normal font-prata text-w-grey">
            Layanan <br
          /></span>
          yang Anda butuhkan
        </p>
        <div
          class="flex flex-row rounded-lg w-[500px] border border-w-green p-1 focus:border-2"
        >
          <input
            class="px-4 py-2 outline-none rounded-xl w-[450px]"
            type="text"
            name="search_landing_page"
            id="search_landing_page"
            placeholder="Cari layanan apapun.."
          />
          <button class="p-3 rounded-md bg-w-green">
            <img src="/images/landing_page/search.svg" alt="Search" />
